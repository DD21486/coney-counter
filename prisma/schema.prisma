// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  username      String?   @unique
  isApproved    Boolean   @default(false) // Alpha access control
  role          String    @default("user") // "owner", "admin", "user"
  isBanned      Boolean   @default(false) // Ban status
  approvedAt    DateTime? // When user was approved
  bannedAt      DateTime? // When user was banned
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // XP and Leveling System
  totalXP       Int       @default(0) // Total XP earned
  currentLevel  Int       @default(1) // Current level (1-99)
  currentLevelXP Int      @default(0) // XP in current level
  nextLevelXP   Int       @default(20) // XP needed for next level
  selectedTitle String?   // Currently selected title

  accounts Account[]
  sessions Session[]
  coneyLogs ConeyLog[]
  achievements UserAchievement[]
  trainingImages TrainingImage[]
  userTitles UserTitle[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Coney Counter specific models
model ConeyLog {
  id        String   @id @default(cuid())
  userId    String
  brand     String
  quantity  Int
  location  String?  // Optional location field
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("coney_logs")
}

model UserAchievement {
  id           String   @id @default(cuid())
  userId       String
  achievementId String  // The ID from our achievements array
  unlockedAt   DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@map("user_achievements")
}

model TrainingImage {
  id          String   @id @default(cuid())
  userId      String
  filename    String   // Original filename
  blobUrl     String   // Vercel Blob URL
  blobKey     String   // Vercel Blob key for deletion
  coneyCount  Int?     // Detected coney count
  date        String?  // Detected date
  brand       String?  // Selected brand
  location    String?  // Selected location
  confidence  Float    // OCR confidence score
  isValidReceipt Boolean @default(true)
  warnings    Int      @default(0) // Number of warnings
  fileSize    Int      // File size in bytes
  fileType    String   // MIME type
  isVerifiedCorrect Boolean? // User verification: true = correct, false = incorrect, null = not verified
  uploadedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("training_images")
}

model UserTitle {
  id          String   @id @default(cuid())
  userId      String
  titleId     String   // The ID from our titles system
  titleName   String   // Display name of the title
  titleType   String   // "level", "achievement", "brand"
  unlockedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, titleId])
  @@map("user_titles")
}
